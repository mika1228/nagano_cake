<div class="container">
  <div class="row">

    <div class="col-sm-12 col-md-11">

<h4>会員情報編集</h4>

<%= form_with model: [:public,@customer], url: update_customer_path(@customer.id), method: :patch  do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">氏名</label>
    <div class="col-sm-10">
      <%= f.text_field :last_name %> <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-10">
      <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号</label>
    <div class="col-sm-10">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">電話番号</label>
    <div class="col-sm-10">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-5">
      <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm w-50" %>
      <button type="button" class="btn btn-danger btn-sm w-25">
        <%= link_to "退会する", unsubscribe_path(current_customer), class: 'text-light' %>
      </button>
    </div>
  </div>

<% end %>

    </div>
  </div>
</div>