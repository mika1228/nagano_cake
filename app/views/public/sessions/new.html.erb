<div class="container">
  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong>ログイン</strong></h5>
    </div>
    
    </div>
  </div>
</div> 

<div class="container">
  <div class="row">
    <div class="col-3 offset-1">

    <div class="mb-4 bg-light text-dark text-center">
      <h6><strong>会員の方はこちらからログイン</strong></h6>
    </div>
    
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-2">
  
        <div class="form-group row">
          <label class="col-4 col-form-label">メールアドレス</label>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "45x20" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4 col-form-label">パスワード</label>
          <div class="col-8">
            <%= f.password_field :password, autocomplete: "current-password", size: "45x20" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4 col-form-label"></label>
          <div class="col-8">
            <%= f.submit "ログイン", class: "btn btn-primary w-50" %>
          </div>
        </div>
        
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-3 offset-1">

      <div class="mt-5 mb-3 bg-light text-dark text-center">
        <h6><strong>会員登録がお済みでない方</strong></h6>
      </div>
    
    </div>
  </div>
</div>

<div class="row">
  <div class="offset-3"><%= render "public/shared/links" %></div>
  <div class="col-3">から新規登録を行ってください。</div>
</div>
  
  
