<h4>注文情報入力</h4>

<%= form_with model: @order do |f| %>
  <h6><strong>支払方法</strong></h6>
  <%= f.radio_button :payment_method, 0 %>
  <%= f.label :payment_method_0, "クレジットカード" %><br>
  <%= f.radio_button :payment_method, 1 %>
  <%= f.label :payment_method_1, "銀行振込" %>

  <h6><strong>お届け先</strong></h6>
  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %><br>
  〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
  <%= current_customer.full_name %><br>

  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録済み住所から選択" %><br>
  <%= f.collection_select :addresses, current_customer.addresses.all, :id, :name, :include_blank => "選択してください" %><br>

  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %><br>
  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %><br>
  <label>住所</label>
  <%= f.text_field :address %><br>
  <label>宛名</label>
  <%= f.text_field :name %><br>

  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>