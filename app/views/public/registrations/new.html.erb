<div class="container">
  <div class="row">
    <div class="col-2 ml-5">
    
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong>新規会員登録</strong></h5>
    </div>
    
    </div>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-12 ml-3">
  
        <div class="form-group row">
          <label class="col-3">名前</label>
          <div class="col-9">
            (姓)　<%= f.text_field :last_name, placeholder: "令和" %>　　(名)　<%= f.text_field :first_name, placeholder: "道子" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">フリガナ</label>
          <div class="col-9">
            (セイ)<%= f.text_field :last_name_kana, placeholder: "レイワ" %>　　(メイ)<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">メールアドレス</label>
          <div class="col-9">
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">郵便番号(ハイフンなし)</label>
          <div class="col-9">
            <%= f.text_field :postal_code, placeholder: "0000000" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">住所</label>
          <div class="col-9">
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町000", size: "45x20" %>
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-3">電話番号(ハイフンなし)</label>
          <div class="col-9">
            <%= f.text_field :telephone_number, placeholder: "00000000000" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">パスワード(<%= @minimum_password_length %>文字以上)</label>
          <div class="col-9">
            <% if @minimum_password_length %>
      
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3">パスワード(確認用)</label>
          <div class="col-9">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3"></label>
          <div class="col-5">
            <%= f.submit "新規登録", class: "btn btn-success btn-sm w-50" %>
          </div>
        </div>
      
      </div>
    </div>

<% end %>

  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-2 mb-3 bg-light text-dark text-center">
      <h5><strong>既に登録済みの方</strong></h5>
    </div>
    
    </div>
  </div>

  <div class="row">
    <div class="offset-1"><%= render "public/shared/links" %></div>
    <div class="col-3">からログインしてください。</div>
  </div>

</div>