<div class="container">
  <div class="row">
    
    <div class="col-sm-12 col-md-11">

<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">名前</label>
    <div class="col-sm-9">
      (姓)<%= f.text_field :last_name %> (名)<%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">フリガナ</label>
    <div class="col-sm-9">
      (セイ)<%= f.text_field :last_name_kana %> (メイ)<%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">メールアドレス</label>
    <div class="col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-9">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">住所</label>
    <div class="col-sm-9">
      <%= f.text_field :address %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-3 col-form-label">電話番号(ハイフンなし)</label>
    <div class="col-sm-9">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">パスワード(<%= @minimum_password_length %>文字以上)</label>
    <div class="col-sm-9">
      <% if @minimum_password_length %>
      
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label">パスワード(確認用)</label>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label"></label>
    <div class="col-sm-5">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<h4>既に登録済みの方</h4>

<div class="form-group row">
  <label class="col-sm-1"><%= render "public/shared/links" %></label>
  からログインしてください。
</div>

    </div>
  </div>
</div>