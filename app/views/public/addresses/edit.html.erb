<h4>配送先編集</h4>

<%= form_with model: @address, url: update_address_path(@address.id), method: :patch do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-10">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
      <%= f.text_field :address %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">宛名</label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm" %>
  </div>

<% end %>