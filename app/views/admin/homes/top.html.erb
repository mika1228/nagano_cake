<div class="container">

  <div class="row">
    <div class="col-2 ml-5">

    <div class="mt-5 mb-3 bg-light text-dark text-center">
      <h5>注文履歴一覧</h5>
    </div>

    </div>
  </div>


  <div class="row justify-content-center">
    <div class="col-10">

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th>
              <%= link_to admin_order_detail_path(order.id), class: "link text-dark" do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
            </th>
            <th><%= order.customer.full_name %></th>
            <th><%= order.order_details.sum(:amount) %></th>
            <th><%= order.status_i18n %></th>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>


  <div class="row">
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>

</div>