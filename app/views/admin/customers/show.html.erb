<div class="container">
  <div class="row">
    <div class="col-3 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong><%= @customer.full_name %></strong>さんの<strong>会員詳細</strong></h5>
    </div>
    
    </div>
  </div>
</div>
    
<div class="container">
  <div class="row">
    <div class="col-9 ml-5">
    
      <div class="form-group row">
        <label class="col-3">会員ID</label>
        <div class="col-6"><%= @customer.id %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">氏名</label>
        <div class="col-6"><%= @customer.last_name %> <%= @customer.first_name %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">フリガナ</label>
        <div class="col-6"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">郵便番号</label>
        <div class="col-6"><%= @customer.postal_code %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">住所</label>
        <div class="col-6"><%= @customer.address %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">電話番号</label>
        <div class="col-6"><%= @customer.telephone_number %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">メールアドレス</label>
        <div class="col-6"><%= @customer.email %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3">会員ステータス</label>
        <div class="col-6"><%= @customer.is_active ? "有効" : "退会" %></div>
      </div>
  
      <div class="form-group row">
        <label class="col-3"></label>
        <div class="col-6">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
          <%= link_to "注文履歴一覧を見る", admin_top_path, class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </div>
</div>