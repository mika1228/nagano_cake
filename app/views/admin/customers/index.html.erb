<h3>会員一覧</h3>

<table class="table table-borderless">
  <thesd>
    <tr class="table-active">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thesd>

  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <th><%= customer.id %></th>
      <th><%= link_to customer.name, admin_customer_path(customer.id) %></th>
      <th><%= customer.is_active ? "有効" : "退会" %></th>
    </tr>
    <% end %>

    <%= paginate @page_customers %>
  </tbody>
</table>