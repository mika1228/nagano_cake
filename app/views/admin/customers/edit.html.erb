<h3><%= @customer.full_name %>さんの会員情報編集</h3>

<div class="field">
  会員ID
  <%= @customer.id %>
</div>

<%= form_with model: [:admin,@customer], url: admin_update_customer_path(@customer.id), method: :patch  do |f| %>
  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %> <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :会員ステータス %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "退会" %><br>
  
  <%= f.submit "変更を保存" %>
<% end %>