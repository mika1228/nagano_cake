<div class="container">
  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong>管理者</strong>ログイン</h5>
    </div>
  
    </div>
  </div>
</div> 

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="mx-auto">

        <div class="form-group row">
          <label class="col-4 col-form-label">メールアドレス</label>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "45x20" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4 col-form-label">パスワード</label>
          <div class="col-8">
            <%= f.password_field :password, autocomplete: "current-password", size: "45x20" %>
          </div>
        </div>
        
        <div class="form-group row">
          <label class="col-4 col-form-label"></label>
          <div class="col-6">
            <%= f.submit "ログイン", class: "btn btn-sm btn-primary w-50" %>
          </div>
        </div>
        
      <div>
    </div>
  </div> 
  
<% end %>

<%= render "admin/shared/links" %>
