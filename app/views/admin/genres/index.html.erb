<div class="container">
  
  <div class="row">
    <div class="col-3 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5>ジャンル<strong>一覧・追加</strong></h5>
    </div>
    
    </div>
  </div>
  

  <%= form_with model: [:admin,@genre] do |f| %>
    <div class="row">
      
      <div class="form-inline">
      <label class="mr-5">ジャンル名</label>
      <%= f.text_field :name, class: "form-control form-control-sm", class: "mr-5" %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>

    </div>
  <% end %>


  <div class="row">
    <div class="col-4">
      <div class="mt-5">

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.name %></th>
            <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
     
      </div>
    </div>
  </div>

</div>