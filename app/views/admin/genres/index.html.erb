<h3>ジャンル一覧・追加</h3>

<%= form_with model: [:admin,@genre] do |f| %>
  <h6>ジャンル名</h6>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-4">

<table class="table table-inverse">
  <thead>
    <tr class="table-active">
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <th><%= genre.name %></th>
      <th><%= link_to "編集する", edit_admin_genre_path(genre.id) %></th>
    </tr>
    <% end %>
  </tbody>

</table>

</div>
</div>
</div>