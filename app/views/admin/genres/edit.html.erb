<div class="container">
  <div class="row">
    <div class="col-2 ml-5">

    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5>ジャンル<strong>編集</strong></h5>
    </div>
    
    </div>
  </div>


  <%= form_with model: [:admin,@genre], url: admin_update_genre_path(@genre.id), method: :patch  do |f| %>
    <div class="row">
      <div class="form-inline">
        <label class="mr-5">ジャンル名</label>
          <%= f.text_field :name, class: "form-control form-control-sm", class: "mr-5" %>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  
</div>