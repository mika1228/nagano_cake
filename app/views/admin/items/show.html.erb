<div class="container">
  
  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong>商品詳細</strong></h5>
    </div>
    
    </div>
  </div>


  <div class="row">
    
    <div class="col-3">
      <%= image_tag @item.image, size: "300x200" %>
    </div>
    
    <div class="col-8 offset-1">
      <div class="form-group row">
        <label class="col-2"><small>商品名</small></label>
        <div class="col-6"><%= @item.name %></div>
      </div>
      
      <div class="form-group row">
        <label class="col-2"><small>商品説明</small></label>
        <div class="col-6"><%= safe_join(@item.introduction.split("\n"),tag(:br)) %></div>
      </div>
      
      <div class="form-group row">
        <label class="col-2"><small>ジャンル</small></label>
        <div class="col-6"><%= @item.genre.name %></div>
      </div>
      
      <div class="form-group row">
        <label class="col-2"><small>税込価格<br>（税抜価格）</small></label>
        <div class="col-6"><%= @item.add_tax_price.to_s(:delimited) %> （<%= @item.price.to_s(:delimited) %>）円</div>
      </div>
      
      <div class="form-group row">
        <label class="col-2"><small>販売ステータス</small></label>
        <div class="col-6">
          <% if @item.is_active %>
            <p class="text-success"><strong>販売中</strong></p>
          <% else %>
            <p class="text-secondary"><strong>販売停止中</strong></p>
          <% end %>
        </div>
      </div>
      
      <div class="form-group row">
        <label class="col-1"></label>
        <div class="col-7"><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></div>
      </div>
    </div>
    
  </div>

</div>