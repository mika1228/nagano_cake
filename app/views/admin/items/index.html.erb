<div class="container">

  <div class="row justify-content-between">

    <div class="col-2 ml-5">
      <div class="mt-5 mb-4 bg-light text-dark text-center">
        <h5><strong>商品一覧</strong></h5>
      </div>
    </div>

    <div class="col-1">
      <div class="mt-5 mb-4">
        <%= link_to new_admin_item_path, class: "text-secondary" do %>
        <i class="fas fa-plus-circle fa-2x"></i>
        <% end %>
      </div>
    </div>

  </div>


  <div class="row justify-content-center">
    <div class="col">

      <table class="table table-borderless border-top border-bottom">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to item.name, admin_item_path(item.id), class: "link text-dark" %></th>
            <th><%= item.price %></th>
            <th><%= item.genre.name %></th>
            <th>
              <% if item.is_active %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %>
            </th>
          </tr>
          <% end %>

        </tbody>
      </table>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>

</div>