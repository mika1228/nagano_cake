<div class="container">
  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-5 mb-4 bg-light text-dark text-center">
      <h5>商品一覧</h5>
    </div>
    
    <%= link_to new_admin_item_path %>
    <i class="fa-light fa-circle-plus"></i>
    
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-11">
      
      <table class="table table-borderless border-top border-bottom">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th><%= link_to item.name, admin_item_path(item.id), class: "link text-dark" %></th>
            <th><%= item.price %></th>
            <th><%= item.genre.name %></th>
            <th><%= item.is_active ? "販売中" : "販売停止中" %></th>
          </tr>
          <% end %>

        </tbody>
      </table>

      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>