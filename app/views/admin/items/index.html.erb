<h3>商品一覧</h3>

<table class="table table-borderless">
  <thesd>
    <tr class="table-active">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thesd>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= link_to item.name, admin_item_path(item.id) %></th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      <th><%= item.is_active ? "販売中" : "販売停止中" %></th>
    </tr>
    <% end %>

    <%= paginate @page_items %>
  </tbody>
</table>