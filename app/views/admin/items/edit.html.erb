<div class="container">
  
  <div class="row">
    <div class="col-2 ml-5">

    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5><strong>商品編集</strong></h5>
    </div>

    </div>
  </div>


  <%= form_with model: [:admin,@item], url: admin_update_item_path(@item.id), method: :patch  do |f| %>
    <div class="row">
      <div class="offset-2">

        <div class="form-group row">
          <label class="col-4">商品画像</label>
          <div class="col-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4">商品名</label>
          <div class="col-8">
            <%= f.text_field :name, size: "35x20" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4">商品説明</label>
          <div class="col-8">
            <%= f.text_area :introduction, size: "35x6" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4">ジャンル</label>
          <div class="col-8">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4">税抜価格</label>
          <div class="col-8">
            <%= f.text_field :price, size: "28x20" %>円
          </div>
        </div>

        <div class="form-group row">
          <label class="col-4">販売ステータス</label>
          <div class="col-8">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>
      <div>
    </div>
    
    <div class="row">
      <div class="mx-auto">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>

  <% end %>
  
</div>

