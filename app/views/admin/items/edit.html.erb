<h3>
  <div class="w-25 bg-light">商品編集</div>
</h3>

<%= form_with model: [:admin,@item], url: admin_update_item_path(@item.id), method: :patch  do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-10">
      <%= f.text_area :introduction %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">ジャンル</label>
    <div class="col-sm-10">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-10">
      <%= f.text_field :price %>円
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">販売ステータス</label>
    <div class="col-sm-10">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>

<% end %>

