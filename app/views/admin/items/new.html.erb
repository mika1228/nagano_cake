<div class="container">
  <div class="row">
    <div class="col-2 ml-5">
      
    <div class="mt-5 mb-5 bg-light text-dark text-center">
      <h5>商品新規登録</h5>
    </div>
    
    </div>
  </div>
</div>

<%= form_with model: [:admin,@item] do |f| %>
  <div class="container">
    <div class="row">
      <div class="px-5 mx-auto">
  
        <div class="form-group row">
          <label class="col-4 col-form-label">商品画像</label>
          <div class="col-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-4 col-form-label">商品名</label>
          <div class="col-8">
            <%= f.text_field :name, placeholder: "商品名", size: "35x20" %>
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-4 col-form-label">商品説明</label>
          <div class="col-8">
            <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "35x6" %>
          </div>
        </div>
      
        <div class="form-group row">
          <label class="col-4 col-form-label">ジャンル</label>
          <div class="col-8">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-4 col-form-label">税抜価格</label>
          <div class="col-8">
            <%= f.text_field :price, placeholder: "1000", size: "28x20" %>円
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-4 col-form-label">販売ステータス</label>
          <div class="col-8">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>
  
        <div class="form-group row">
          <label class="col-4 col-form-label"></label>
          <div class="col-8">
            <%= f.submit "新規登録", class: "btn btn-success w-50" %>
          </div>
        </div>
  
      <div>
    </div>
  </div> 
<% end %>